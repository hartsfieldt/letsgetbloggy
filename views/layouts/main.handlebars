                {{else}}
                  <a href="/login" class="nav-link">Log-in</a>
                {{/if}}
              </div>
            </div>
          </div>
        </nav>
      </header>
      <div class="container">
        <main>
          {{{body}}}
        </main>
        <footer>
          <div class="container">
            <h4>Thanks for visiting!</h4>
          </div>
        </footer>
      </div>
    </div>
    <script src="/assets/js/logout.js"></script>
